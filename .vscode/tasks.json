{
    "version": "2.0.0",
    "presentation": {
        "echo": false,
        "showReuseMessage": true,
        "clear": true
    },
    "tasks": [
        {
            "label": "Profile Script",
            "type": "shell",
            "command": "poetry run 'python -m cProfile -o ${fileDirname}/${fileBasenameNoExtension}.prof ${file} && snakeviz ${fileDirname}/${fileBasenameNoExtension}.prof'"
        },
        {
            "label": "Run Script",
            "type": "shell",
            "command": "poetry run python ${file}",
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Install Module from Selection",
            "type": "shell",
            "command": "poetry add ${selectedText}"
        },
        {
            "label": "Uninstall Module from Selection",
            "type": "shell",
            "command": "poetry remove ${selectedText}"
        }
    ]
}